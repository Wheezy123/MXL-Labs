<%= form_for(@reseller) do |f| %>
  <% if @reseller.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reseller.errors.count, "error") %> prohibited this reseller from being saved:</h2>

      <ul>
      <% @reseller.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="form-fields-mxl">
    <div class="field" placeholder="Your name here">
   <!--    #<%= f.label :first_name %><br> -->
      <%= f.text_field :first_name, :placeholder =>'First Name' %>
    </div>
    <div class="field">
     <!--  <%= f.label :last_name %><br> -->
      <%= f.text_field :last_name, :placeholder =>'Last Name' %>
    </div>
    <div class="field">
    <!--   <%= f.label :company %><br> -->
      <%= f.text_field :company, :placeholder =>'Company Name' %>
    </div>
    <div class="field" >
     <!--  <%= f.label :email %><br> -->
      <%= f.text_field :email, :placeholder =>'Email' %>
    </div>
    <div class="field">
     <!--  <%= f.label :phone_number %><br> -->
      <%= f.text_field :phone_number, :placeholder =>'Phone Number' %>
    </div>
    <div class="field">
     <!--  <%= f.label :number_of_apps %><br> -->
      <%= f.number_field :number_of_apps, :placeholder => 'Number of Apps',
       :min => 0, :max => 100 %>
    </div>
    <div class="field">
    <!--   <%= f.label :type_of_business %><br> -->
      <%= f.text_field :type_of_business, :placeholder =>'Type of Business' %>
    </div>
    <div class="field">
     <!--  <%= f.label :client_info %><br> -->
      <%= f.text_area :client_info, :placeholder =>'Info about the clients can go here' %>
    </div>
    <div class="field">
     <!--  <%= f.label :location %><br> -->
      <%= f.text_field :location, :placeholder =>'Your Location' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
